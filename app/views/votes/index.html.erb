<h3>Vote on Songs</h3>
<% @playlist_song.each do |playlist_song| %>
	<% curr_song = playlist_song.song %>
	<div>
		<p><%= curr_song.name %><br />by: <%= curr_song.artist %></p>
		<p><%= link_to "Love", {:controller => "votes", :action => "create", :vote => { :song_id => curr_song.id, :vote => 1 }}, :method => "post" %> | 
	 	<%= link_to "Hate", {:controller => "votes", :action => "create", :vote => { :song_id => curr_song.id, :vote => 2 }}, :method => "post" %></p>
	</div>
<% end %>