<h3>Vote on these songs</h3>
<%= link_to "See Results", results_path %>
<% @eligible_songs.uniq! {|s| s.song_id } %>
<% @eligible_songs.each do |song| %>
	<% vote = Vote.find_current_vote(song.id, current_user.id) %>
	<% if vote %>
		<div class="<%= Vote.display(vote.cast_vote) %>">
		<% else %>
		<div class="undecided">
	<% end %>
	<p><%= song.name %><br />
	by: <%= song.artist %></p>
	<p><%= link_to "Yes", {:controller => "votes", :action => "create", :vote => { :song_id => song.id, :vote => 1 }}, :method => "post" %> | 
	 	<%= link_to "No", {:controller => "votes", :action => "create", :vote => { :song_id => song.id, :vote => 2 }}, :method => "post" %></p>
	</div>
<% end %>