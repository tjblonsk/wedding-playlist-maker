<h3>Your Playlists</h3>
<% @playlists.each do |playlist| %>
	<p><%= link_to playlist.name, playlist %> (<%= playlist.songs.count %> songs)<br />
		<% playlist.songs.each do |song| %>
			<%= image_tag(song.thumb60) %>
		<% end %>
		<p><%= link_to "Rename", edit_playlist_path(playlist) %> | 
		<%= link_to 'Delete', playlist, :confirm => "Are you sure?", :method => "delete" %></p>
	<p><br />
<% end %>
<p><%= link_to "+ New Playlist", new_playlist_path %></p>
