<h2>Playlist: <%= @playlist.name %></h2>
<p>Add as many songs as you want. Finished adding songs? <%= link_to "Go Vote!", votes_path %></p>
<p><%= link_to "+ Add Songs", songs_path, :class => "btn btn-primary" %></p>

<% if @playlist_songs.count > 0 %>
<table class="table alt">
	<tr>
		<th></th>
		<th width="25%">Song</th>
		<th>Artist</th>
		<th>Album</th>
		<th></th>
	</tr>
	<% @playlist_songs.each do |song| %>
	<tr>
		<td rowspan="2"><%= image_tag(song.thumb100) %></td>
		<td><%= song.name %></td>
		<td><%= song.artist %></td>
		<td><%= song.album %></td>
		<td><%= link_to 'Delete', {:controller => "playlist_songs", 
                       :action => "destroy",  
                       :id => song.id,}, 
                       :confirm => "Are you sure?",
                       :class => "btn btn-danger",  
                       :method => "delete" %></td>
	</tr>
	<tr>
	
		<td colspan="4"><%= audio_tag(song.audio, :controls => true, :preload => "none") %></td>
	</tr>
	<% end %>
</table>

<p>Finished adding songs? <%= link_to "Go Vote!", votes_path %></p>

<% end %>

